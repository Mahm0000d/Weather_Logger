<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_details">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_all_all_medium">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/search_recycler_listItem_name"
                android:text="Country"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/country_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/search_recycler_listItem_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/search_recycler_listItem_name"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                android:text="@string/description_tv"
                android:layout_marginTop="@dimen/padding_all_all_small"

                />

            <TextView
                android:id="@+id/desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/search_recycler_listItem_name"
                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                tools:text="Description"
                android:layout_marginTop="@dimen/padding_all_all_small" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temp"
                style="@style/search_recycler_listItem_name"
                android:layout_marginTop="@dimen/padding_all_all_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min : "
                android:layout_marginTop="@dimen/padding_all_all_small"
                android:layout_marginStart="@dimen/padding_all_all_medium"
                android:layout_marginLeft="@dimen/padding_all_all_medium"
                style="@style/search_recycler_listItem_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <TextView
                android:id="@+id/textView9"
                style="@style/search_recycler_listItem_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_all_all_medium"
                android:layout_marginLeft="@dimen/padding_all_all_medium"
                android:text="Max : "
                android:layout_marginTop="@dimen/padding_all_all_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/min_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="TextView"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/search_recycler_listItem_name"

                />

            <TextView
                android:id="@+id/max_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="TextView"
                app:layout_constraintBottom_toBottomOf="@+id/textView9"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/search_recycler_listItem_name"
                android:layout_marginTop="@dimen/padding_all_all_small"

                />


            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wind"
                style="@style/search_recycler_listItem_name"
                android:layout_marginTop="@dimen/padding_all_all_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed : "
                android:layout_marginTop="@dimen/padding_all_all_small"
                android:layout_marginStart="@dimen/padding_all_all_medium"
                android:layout_marginLeft="@dimen/padding_all_all_medium"
                style="@style/search_recycler_listItem_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/textView14"
                style="@style/search_recycler_listItem_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_all_all_medium"
                android:layout_marginLeft="@dimen/padding_all_all_medium"
                android:text="Deg : "
                android:layout_marginTop="@dimen/padding_all_all_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <TextView
                android:id="@+id/speed_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="TextView"
                app:layout_constraintBottom_toBottomOf="@+id/textView13"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/search_recycler_listItem_name"

                />

            <TextView
                android:id="@+id/deg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="TextView"
                app:layout_constraintBottom_toBottomOf="@+id/textView14"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/search_recycler_listItem_name"
                android:layout_marginTop="@dimen/padding_all_all_small"

                />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clouds : "
                style="@style/search_recycler_listItem_name"
                android:layout_marginTop="@dimen/padding_all_all_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />

            <TextView
                android:id="@+id/clouds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Clouds  "
                style="@style/search_recycler_listItem_name"
                android:layout_marginTop="@dimen/padding_all_all_small"
                app:layout_constraintBottom_toBottomOf="@+id/textView15"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>